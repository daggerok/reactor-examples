<formalpara>
<title>build</title>
<para>
<programlisting language="java" linenumbering="unnumbered">package daggerok;

import lombok.extern.slf4j.Slf4j;
import reactor.core.publisher.Flux;

@Slf4j
public class App {
  public static void main(String[] args) {
    Flux.range(0, 10)
        .map(integer -&gt; integer * integer)
        .filter(integer -&gt; integer % 3 != 0)
        .buffer(3)
        .subscribe(integers -&gt; log.info("result: {}", integers));
  }
}</programlisting>
</para>
</formalpara>
<formalpara>
<title>build</title>
<para>
<programlisting language="bash" linenumbering="unnumbered">./mvnw -p ./map-filter-buffer/pom.xml
java -jar ./map-filter-buffer/target/*-all.jar

# gradle jar
./gradlew -b ./map-filter-buffer/build.gradle
java -jar ./map-filter-buffer/build/libs/*-all.jar</programlisting>
</para>
</formalpara>
<formalpara>
<title>build</title>
<para>
<programlisting language="java" linenumbering="unnumbered">package daggerok;

import lombok.extern.slf4j.Slf4j;
import reactor.core.publisher.Flux;

@Slf4j
public class App {
  public static void main(String[] args) {
    Flux.range(0, 10)
        .map(integer -&gt; integer * integer)
        .filter(integer -&gt; integer % 3 != 0)
        .retry()
        .subscribe(integers -&gt; log.info("result: {}", integers));
  }
}</programlisting>
</para>
</formalpara>
